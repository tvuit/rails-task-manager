<div class="container">
<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control rows="5"' %>
  </div>
  <%= f.submit class: 'btn btn-primary rows="3"' %>
<% end %>
</div>
